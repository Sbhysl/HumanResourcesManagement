@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'>
    <link href="~/css/navbar.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Merhaba PersonelAd!</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto flex-column vertical-nav">
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:58472/Home/CompanyManagerHomePage"><span class="bi bi-menu-button">  Anasayfa</span></a><br />
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="OffDays" asp-action="DayOffPage"><span class="bi bi-tsunami"> İzinlerim</span></a><br />
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="OffDays" asp-action="DayOffPage"><span class="bi bi-wallet2"> Harcamalarım</span></a><br />
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="PublicHolidaysManagement"><span class="bi bi-table"> Resmi Tatiller</span></a><br />
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#"><span class="bi bi-gear"> Ayarlar</span></a>
                </li>

            </ul>

        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @section Scripts{

        <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js'></script>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.4/Chart.bundle.min.js'></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.js"></script>
        <script src="~/js/datepicker.js"></script>
        <script>
            $(document).ready(function () {

                $('.input-daterange').datepicker({
                    format: 'dd-mm-yyyy',
                    autoclose: true
                });

            });
        </script>
    }
    @RenderSection("Scripts", required: false)
</body>
</html>