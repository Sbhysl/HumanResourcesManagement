@model HRManagement.Data.Entities.Personel
@{
    Layout = "_LayoutSirketYoneticisi";
}


<br />
<br />

@await Component.InvokeAsync("PersonalsEditList")

@if (Model.ID != null && Model.ID != 0)
{
<form method="post" enctype="multipart/form-data" asp-action="Update" asp-controller="PersonalManagement">




    <input type="hidden" name="ID" value="@Model.ID" />

    <input type="hidden" name="IsActive" value="@Model.IsActive" />

    <input type="hidden" name="ModifiedDate" value="@Model.ModifiedDate" />

    <input type="hidden" name="CreatedDate" value="@Model.CreatedDate" />


    <div class="form-group row">
        <div class="col-sm-12">
            <input class="form-control form-control-lg" type="text" name="FirstName" value="@Model.FirstName" placeholder="Çalışan Ad">
        </div>
        <div class="col-sm-12">
            <input class="form-control form-control-lg" type="text" name="LastName" value="@Model.LastName" placeholder="Çalışan Soyad">
        </div>
        <div class="col-sm-12">
            <input class="form-control form-control-lg" type="text" name="Mail" value="@Model.Mail" placeholder="Mail Adresi">
        </div><br />
        <div class="col-sm-12">
            <label for="exampleFormControlSelect2">Çalışan Departman</label>
            <select multiple class="form-control" id="exampleFormControlSelect2" name="Departments" value="@Model.Departments">
                <option value="finance">Finans</option>
                <option value="customerService">Müşteri Hizmetleri</option>
                <option value="informationTech">IT</option>
                <option value="humanResource">İnsan Kaynakları</option>
                <option value="marketing">Pazarlama</option>
            </select><br />
        </div>

    </div>


    <button type="submit" class="btn btn-block btn-secondary"> Kaydet </button>
</form>


}
else
{
    <br /><br />
<form method="post" enctype="multipart/form-data" asp-action="AddPersonel" asp-controller="PersonalManagement">


    
